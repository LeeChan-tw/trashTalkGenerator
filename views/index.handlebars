<div class="container bg-secondary">
  <div class="row justify-content-center">
    <div class="col-auto my-4">
      <h1>你想對誰說幹話？</h1>
    </div>
  </div>
  <form method="POST" action="/">
    <div class="form-row">
      {{#each targets}}
      <div class="form-group col-4">
        <label class="card text-center" style="cursor: pointer">
          <img src=" {{this.image}} " height="260" alt="">
          <div class="card-body">
            <h5 class="card-text">{{this.target}}</h5>
            <input type="radio" name="target_en" {{equalCheck ../role this.target_en}} id="{{this.target_en}}"
              value="{{this.target_en}}">
          </div>
        </label>
      </div>
      {{/each}}
    </div>

    <button type="submit" class="btn btn-dark">Ｇenerate <i class="fas fa-archive"></i></button>
    {{#if sample}} <span class="bg-light">{{sample}}</span> {{/if}}
  </form>

</div>